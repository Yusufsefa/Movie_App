<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchViewState"
            type="com.yyusufsefa.movieapp.data.viewstate.SearchViewState" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/keyline_32dp"
            android:layout_height="@dimen/keyline_32dp"
            android:layout_margin="@dimen/keyline_8dp"
            android:src="@drawable/ic_search" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSearchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/keyline_4dp"
            android:layout_marginEnd="@dimen/keyline_4dp"
            android:text="@{searchViewState.title}"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="tom and jerry " />

    </LinearLayout>
</layout>